import time

RED = "\033[91m"
GREEN = "\033[92m"
YELLOW = "\033[93m"
BLUE = "\033[94m"
RESET = "\033[0m"
WHITE = "\033[97m"

tym = int(input("ENTER THE TIME FOR COUNTDOWN (IN SECONDS): "))

for x in range(tym, 0, -1):
    second = x % 60
    minute = int(x / 60) % 60
    hour = int(x / 3600)

   
    print(f"{WHITE}{hour:02}:{YELLOW}{minute:02}:{RED}{second:02}{RESET}")

    time.sleep(1)

print(f"{GREEN}TIMES UP...{RESET}")
