import string
import json
import os
b=input("Enter Email: ")
a=input("Enter Password: ")

score=0
if len(a)>=8 :
    score+=1
if len(a)>=12:
    score+=1
if any(c.islower() for c in a ):
    score+=1
if any(c.isupper() for c in a ):
    score+=1
if any(c.isdigit() for c in a):
    score+=1
if any(c in string.punctuation for c in a):
    score+=1
if a.isdigit() or a.islower() or a.isupper() or all(c in string.punctuation for c in a):
    score-=1
if len(set(a))==1:
    score=0
if score <= 2:
    strength = "Weak"
elif score <= 4:
    strength = "Medium"
else:
    strength = "Strong"

print(f"Password strength: {strength}") 
 
filename='saver.json'
if os.path.exists(filename) and os.path.getsize(filename)>0:
    with open(filename, 'r') as f:
     get_file=json.load(f)
else:
    get_file=[]
data={
    "Email": b,
    "Password": a,
    "strength":strength,
    "score":score
}
get_file.append(data)
with open('saver.json', 'w') as z:
 json.dump(get_file,z,indent=4)

 
